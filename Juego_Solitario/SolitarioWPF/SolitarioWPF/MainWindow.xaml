<Window x:Class="SolitarioWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Solitario" Height="600" Width="800">
    <Grid Background="Green">
        <!-- Área para el mazo y las pilas de fundación -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10">
            <Button Name="DeckButton" Width="80" Height="120" Content="Deck" Margin="5"/>
            <Button Name="WasteButton" Width="80" Height="120" Content="Waste" Margin="5"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10">
                <Button Width="80" Height="120" Content="Foundation 1" Margin="5"/>
                <Button Width="80" Height="120" Content="Foundation 2" Margin="5"/>
                <Button Width="80" Height="120" Content="Foundation 3" Margin="5"/>
                <Button Width="80" Height="120" Content="Foundation 4" Margin="5"/>
            </StackPanel>
        </StackPanel>

        <!-- Área para las pilas de juego -->
        <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,150,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Vertical" Margin="5">
                <Button Width="80" Height="120" Content="Pile 1" Margin="5"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Vertical" Margin="5">
                <Button Width="80" Height="120" Content="Pile 2" Margin="5"/>
            </StackPanel>
            <StackPanel Grid.Column="2" Orientation="Vertical" Margin="5">
                <Button Width="80" Height="120" Content="Pile 3" Margin="5"/>
            </StackPanel>
            <StackPanel Grid.Column="3" Orientation="Vertical" Margin="5">
                <Button Width="80" Height="120" Content="Pile 4" Margin="5"/>
            </StackPanel>
            <StackPanel Grid.Column="4" Orientation="Vertical" Margin="5">
                <Button Width="80" Height="120" Content="Pile 5" Margin="5"/>
            </StackPanel>
            <StackPanel Grid.Column="5" Orientation="Vertical" Margin="5">
                <Button Width="80" Height="120" Content="Pile 6" Margin="5"/>
            </StackPanel>
            <StackPanel Grid.Column="6" Orientation="Vertical" Margin="5">
                <Button Width="80" Height="120" Content="Pile 7" Margin="5"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>

